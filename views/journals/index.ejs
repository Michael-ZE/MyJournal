<h2 class="page-title">Your Diary</h2>
<div>
  <form action="/blogs" class="search grid grid-3-cols">
    <div>
      <label for="title">Title: </label>
      <input type="text" id="title" name="title" value="<%= search.title %>" />
    </div>
    <div>
      <label for="date">Date: </label>
      <input type="date" id="date" name="date" value="<%= search.date %>" />
    </div>

    <div class="grid-align-center">
      <button class="btn btn-primary">Search</button>
    </div>
  </form>
</div>
<% blogs.forEach(blog=>{ %>
<article>
  <h3 class="blog-title"><%= blog.title %></h3>
  <span>
    <%= (new Date(blog.date)).toLocaleString('en-US', {year: 'numeric' , month:
    'short' , day: 'numeric' }) %>
  </span>
  <p class="blog-paragraph">
    <%= blog.post.slice(0, 150)+"..." %>
    <a href="/blogs/<%= blog.id %>" class="show-post-link">view more</a>
  </p>
</article>
<hr />
<% }) %>
