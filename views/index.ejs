<div class="homepage-heading flex">
  <h2 class="page-title">Today</h2>
  <span class="heading-date"><%= locals.date %></span>
</div>

<% for(let blog of blogs){ %>
<article>
  <h3 class="blog-title"><%= blog.title %></h3>
  <p class="blog-paragraph">
    <%= blog.post.slice(0, 150)+"..." %>
    <a href="/blogs/<%= blog.id %>" class="show-post-link">view more</a>
  </p>
</article>
<hr />
<% } %>
